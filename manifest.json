{
  "name": "Trove Pick",
  "description": "Easy way to pick articles to Trove",
  "version": "0.1",
  "permissions": [
    "activeTab"
  ],
  "icons":{"16": "trove_icon_16.png",
            "48": "trove_icon_48.png",
            "128" "trove_icon_128.png":},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Pick Articles",
    "default_icon": "trove_icon_16.png"
  },
  "manifest_version": 2
}
